@model Meu_Treino.Models.Dtos.Usuario


<div class="container-fluid">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><strong>Olá, <span class="highlight">@Model.Nome</span>, você está no <strong class="meuTreino">Meu Treino</strong></strong></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
        
        <ul class="navbar-nav flex-grow-1 ">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Index">Página Inicial</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="ExercicioPlano" asp-action="Index">Planos</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Exercicio" asp-action="Index">Exercício</a>
            </li>
            
            

            @if (Model.Perfil == Meu_Treino.Enums.PerfilEnum.Admin)
            {
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="ListaUsuario">Lista de Usuarios</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Exercicio" asp-action="CadastrarExercicio"> Cadastro de Exercício</a>
                </li>                
            }
            

            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Login" asp-action="Sair">Sair</a>
            </li>

        </ul>
        </div>
    </div>
</div>

